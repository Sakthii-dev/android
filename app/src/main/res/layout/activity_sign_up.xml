<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".LoginSignUp.SignUp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/left_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="88dp"
            android:layout_marginEnd="149dp"
            android:layout_toEndOf="@+id/backBtn"
            android:src="@drawable/shopping_logo" />

    </RelativeLayout>


    <!--    <ImageView-->
    <!--        android:layout_width="70dp"-->
    <!--        android:layout_height="70dp"-->
    <!--        android:layout_gravity="center"-->
    <!--        android:background="@drawable/button_background"-->
    <!--        android:gravity="center"-->
    <!--        android:importantForAccessibility="no"-->
    <!--        android:src="@drawable/icon"-->
    <!--        android:textSize="30sp"-->
    <!--        tools:ignore="ImageContrastCheck" />-->



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new Account"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/foreground"
        android:textStyle="bold"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:background="@drawable/sign_up_back"
        android:gravity="center|top"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="65dp"

            app:layout_constraintBottom_toTopOf="@+id/signUp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.094"
            tools:layout_editor_absoluteX="-16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:paddingTop="20dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="First Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="60dp">

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/title" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fnameLayout"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        app:boxStrokeColor="@color/primary"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/primary">

                        <EditText
                            android:id="@+id/firstname"
                            android:layout_width="300dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableStart="@drawable/person"
                            android:drawablePadding="20dp"
                            android:hint="First Name"
                            android:importantForAutofill="no"
                            android:inputType="textEmailAddress"
                            android:paddingStart="20dp"
                            android:textSize="17sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_firstname"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Middle Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:visibility="gone" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Last Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="60dp">

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/title" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lnameLayout"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        app:boxStrokeColor="@color/primary"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/primary">

                        <EditText
                            android:id="@+id/lastname"
                            android:layout_width="300dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableStart="@drawable/person"
                            android:drawablePadding="20dp"
                            android:hint="Last Name"
                            android:importantForAutofill="no"
                            android:inputType="textEmailAddress"
                            android:paddingStart="20dp"
                            android:textSize="17sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_lastname"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="15sp" />


                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="60dp">

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/title" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/mnameLayout"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        app:boxStrokeColor="@color/primary"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/primary">

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="300dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableStart="@drawable/email_blue"
                            android:drawablePadding="20dp"
                            android:hint="Email"
                            android:importantForAutofill="no"
                            android:inputType="textEmailAddress"
                            android:paddingStart="20dp"
                            android:textSize="17sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_mail"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/cCode"
                        android:layout_width="60dp"
                        android:layout_height="53dp"
                        app:ccp_showArrow="true"
                        android:layout_marginRight="10dp"
                        app:ccp_showNameCode="false"
                        app:ccp_showFlag="false"
                        android:gravity="center"
                        android:background="@drawable/code_out"
                        app:ccp_arrowSize="9dp"
                        app:ccp_arrowColor="@color/primary"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phoneLayout"
                        android:layout_width="230dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="0dp"
                        app:boxBackgroundMode="outline"
                        android:gravity="center"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeErrorColor="#FF0000"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/primary">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phone"
                            android:layout_width="230dp"
                            android:layout_height="55dp"
                            android:layout_gravity="right"
                            android:gravity="left|center"
                            android:hint="Phone"
                            android:importantForAutofill="no"
                            android:inputType="phone|number"
                            android:textSize="20sp">

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Password"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="60dp">

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/title" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordLayout"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        app:boxStrokeColor="@color/primary"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/primary"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTintMode="multiply">


                        <EditText
                            android:id="@+id/password"
                            android:layout_width="300dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableStart="@drawable/lock"
                            android:drawableLeft="@drawable/email_blue"
                            android:drawablePadding="20dp"
                            android:gravity="left|center"
                            android:hint="Password"
                            android:importantForAutofill="no"
                            android:inputType="textPassword"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:textSize="17sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Re-Enter Password"
                    android:textSize="22sp"
                    android:textStyle="bold"

                    android:visibility="gone" />


                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="60dp">

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="25dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/title" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/repasswordLayout"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        app:boxStrokeColor="@color/primary"
                        app:errorEnabled="true"
                        app:passwordToggleEnabled="true"
                        app:hintTextColor="@color/primary"
                        app:passwordToggleTintMode="multiply">

                        <EditText
                            android:id="@+id/re_password"
                            android:layout_width="300dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableStart="@drawable/lock"
                            android:drawableLeft="@drawable/email_blue"
                            android:drawablePadding="20dp"
                            android:gravity="left|center"
                            android:hint="Re-enter password"
                            android:importantForAutofill="no"
                            android:inputType="textPassword"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:textSize="17sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_re_password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Date of Birth"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:visibility="gone" />









                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="15sp" />





            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signUp"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/foreground"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>






</LinearLayout>